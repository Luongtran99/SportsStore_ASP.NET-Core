@model IEnumerable<Product>

@{ 
    ViewBag.Title = "All Products";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <td>Name</td>
        <td class="text-right">Price</td>
        <td class="text-center">Action</td>
    </tr>
    @foreach(var p in Model)
    {
        <tr>
            <td class="text-right">@p.ProductID</td>
            <td>@p.Name</td>
            <td class="text-right">@p.Price.ToString("c")</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-productId="@p.ProductID">Edit</a>
                    <input type="hidden" name="ProductID" value="@p.ProductID"/>
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
</form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Product</a>
</div>